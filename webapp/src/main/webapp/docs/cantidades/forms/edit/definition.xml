<?xml version="1.0" encoding="UTF-8"?>
<fd:form xmlns:fd="http://apache.org/cocoon/forms/1.0#definition">
    <fd:widgets>
        <fd:field id="cantidadNombre" required="true">
            <fd:label>Cantidad Nombre: </fd:label>
            <fd:help>Escriba el nombre que describe la cantidad del billete o moneda.</fd:help>
            <fd:datatype base="string"/>
            <fd:validation>
                <fd:length max="50"/>
            </fd:validation>
        </fd:field>
        
        <fd:field id="cantidadValor" required="true">
			<fd:label>Cantidad: </fd:label>					
			<fd:help>Escriba la cantidad que corresponde al valor descrito en cantidad nombre.</fd:help>
			<fd:datatype base="decimal" />
		</fd:field>
        
        <fd:booleanfield id="dolares">
			<fd:label>Dolares</fd:label>								
		</fd:booleanfield>
        <fd:submit id="guardar">
          <fd:label>Guardar</fd:label>
        </fd:submit>
    </fd:widgets>
</fd:form>