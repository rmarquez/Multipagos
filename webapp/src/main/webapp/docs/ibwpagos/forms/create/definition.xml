<?xml version="1.0" encoding="UTF-8"?>
<fd:form xmlns:fd="http://apache.org/cocoon/forms/1.0#definition"
	     xmlns:i18n="http://apache.org/cocoon/i18n/2.1">
	    <fd:validation>
        <fd:javascript>        	
            return validarForm(widget);         
        </fd:javascript>
    </fd:validation>
	<fd:widgets>
		<fd:messages id="mensajes de error">
            <fd:label>Ocurrieron los siguientes errores</fd:label>
        </fd:messages> 
        
        <fd:booleanfield id="editar"/>
		
        <fd:field id="usrId" state="output">
			<fd:label>Supervisor</fd:label>
			<fd:datatype base="integer" />
			<fd:selection-list src="cocoon:/supervisor.combo"
				cache="request" />
			<fd:on-value-changed>
				<fd:javascript>
					alSeleccionarUsuario(event);
				</fd:javascript>
			</fd:on-value-changed>
		</fd:field>

        <fd:field id="fecha" state="output">
            <fd:label>Fecha</fd:label>
            <fd:datatype base="date">
				<fd:convertor type="formatting" variant="date">
					<fd:patterns>
						<fd:pattern>dd/MM/yyyy</fd:pattern>
					</fd:patterns>
				</fd:convertor>
			</fd:datatype>			
        </fd:field>

        <fd:field id="facturas" state="output">
			<fd:label>Facturas</fd:label>			
			<fd:datatype base="integer"/>			
		</fd:field>
		
		
		<fd:calculatedfield id="montoTotal" state="output">
            <fd:label>Monto (U$):</fd:label>
            <fd:datatype base="decimal">
                <fd:convertor type="formatting" variant="number">
                    <fd:patterns>
                        <fd:pattern>#,##0.00</fd:pattern>
                    </fd:patterns>
                </fd:convertor>
            </fd:datatype>
            <fd:value type="javascript" triggers="detalle/./montoPago">
            var subTotal = java.math.BigDecimal.ZERO;
            var detalle = form.getChild("detalle");
                 for (var i = 0; i &lt; detalle.size; i++) {
                    var row = detalle.getRow(i);
                      var montoPago = row.getChild("montoPago").getValue();
                   		if(montoPago != null) {                          
                       		subTotal = subTotal.add(montoPago).setScale(2, java.math.BigDecimal.ROUND_HALF_UP);
                       	}
                  }
                  return subTotal;
            </fd:value>
        </fd:calculatedfield>
        
        <fd:field id="cantidadPagos" state="output">
			<fd:label>Pagos (U$):</fd:label>			
			<fd:datatype base="integer"/>			
		</fd:field>
		
		
		
		<fd:repeater id="detalle" initial-size="1">
            <fd:widgets>
            	
            	<fd:booleanfield id="pagoCk">
		            <fd:label>Pago Ck:</fd:label>
		            <fd:help>Indique si el pago fue realizado con cheque.</fd:help>
		            <fd:on-value-changed>
						<fd:javascript>
							pagoConCK(event);
						</fd:javascript>
					</fd:on-value-changed>
		        </fd:booleanfield>
            	
                <fd:field id="codigo" state="output">
					<fd:label>Codigo</fd:label>
		            <fd:datatype base="string"/>
		            <fd:on-value-changed>
						<fd:javascript>
							alSeleccionarCodigo(event);
						</fd:javascript>
					</fd:on-value-changed>
                </fd:field>
                
                <fd:field id="factura">
					<fd:label>Factura</fd:label>
		            <fd:datatype base="string"/>
		            <fd:on-value-changed>
						<fd:javascript>
							alSeleccionarFactura(event);
						</fd:javascript>
					</fd:on-value-changed>		            
                </fd:field>
                
                
                <fd:field id="carteraId">
					<fd:datatype base="integer"/>
				</fd:field>
				
				<fd:field id="cliente" state="output">
					<fd:label>Cliente</fd:label>					
					<fd:datatype base="string" />
				</fd:field>
				
				<fd:field id="municipioId" state="output">
					<fd:label>Municipio</fd:label>
					<fd:datatype base="integer" />
					<fd:selection-list src="cocoon:/municipio.combo"
						cache="request" />					
				</fd:field>
				
				<fd:field id="barrioId" state="output">
					<fd:label>Barrio</fd:label>
					<fd:datatype base="integer" />		
				</fd:field>
				
				<fd:field id="fechaFactura" state="output">
					<fd:label>Fecha Factura</fd:label>
		            <fd:datatype base="date">
						<fd:convertor type="formatting" variant="date">
							<fd:patterns>
								<fd:pattern>dd/MM/yyyy</fd:pattern>
							</fd:patterns>
						</fd:convertor>
					</fd:datatype>			
		        </fd:field>
				
				<fd:field id="mes" state="output">
					<fd:label>Mes</fd:label>					
					<fd:datatype base="string" />
				</fd:field>			
				
				
				<fd:field id="montoPago">
		            <fd:label>Monto (U$):</fd:label>
		            <fd:help>Monto pagado en dolares.</fd:help>
		            <fd:datatype base="decimal">
		                <fd:convertor type="formatting" variant="number">
		                    <fd:patterns>
		                        <fd:pattern>#,##0.00</fd:pattern>
		                    </fd:patterns>
		                </fd:convertor>
		            </fd:datatype>
		            <fd:validation>
			            <fd:assert test="montoPago &gt;= 0">
			              <fd:failmessage><i18n:text>com.metropolitana.multipagos.mayorigualquecero</i18n:text></fd:failmessage>
			            </fd:assert>
		      		</fd:validation>
		        </fd:field>
		        
		        <fd:field id="numeroCk" state="invisible">
					<fd:label>Num Ck </fd:label>					
					<fd:datatype base="string" />
				</fd:field>	
		        
		        <fd:field id="salgoPagar" state="output">
		            <fd:label>Saldo a pagar(U$):</fd:label>
		            <fd:help>Saldo pendiente en dolares.</fd:help>
		            <fd:datatype base="decimal">
		                <fd:convertor type="formatting" variant="number">
		                    <fd:patterns>
		                        <fd:pattern>#,##0.00</fd:pattern>
		                    </fd:patterns>
		                </fd:convertor>
		            </fd:datatype>
		            <fd:validation>
			            <fd:assert test="saldoPago &gt;= 0">
			              <fd:failmessage><i18n:text>com.metropolitana.multipagos.mayorigualquecero</i18n:text></fd:failmessage>
			            </fd:assert>
		      		</fd:validation>
		        </fd:field>
		        
				<fd:field id="fechaPago" required="true">
		            <fd:label>Fecha Pago</fd:label>
		            <fd:datatype base="date">
						<fd:convertor type="formatting" variant="date">
							<fd:patterns>
								<fd:pattern>dd/MM/yyyy</fd:pattern>
							</fd:patterns>
						</fd:convertor>
					</fd:datatype>
					<fd:on-value-changed>
						<fd:javascript>
							validarFechaPago(event);
						</fd:javascript>
					</fd:on-value-changed>			
		        </fd:field>
		        
		        <fd:field id="recibo" required="true">
					<fd:label>Recibo </fd:label>					
					<fd:datatype base="integer" />
				</fd:field>
				
				<fd:field id="colectorNumero" required="true">
					<fd:label>C#:</fd:label>
		            <fd:datatype base="integer"/>
		            <fd:on-value-changed>
						<fd:javascript>
							alSeleccionarNumColector(event);
						</fd:javascript>
					</fd:on-value-changed>
                </fd:field>
                
                <fd:field id="observaciones">
					<fd:label>Observaciones </fd:label>					
					<fd:datatype base="string" />
				</fd:field>	
				
				<fd:field id="colectorId" required="true">
					<fd:datatype base="integer"/>						
				</fd:field>
				
				<fd:field id="colectorNombre" state="output">
					<fd:label>Colector: </fd:label>					
					<fd:datatype base="string" />
				</fd:field>
						        
		        <fd:field id="horaRegistro" required="true">
					<fd:datatype base="string" />
				</fd:field>
				
				<fd:field id="contador">
					<fd:datatype base="integer"/>
					<fd:on-value-changed>
					<fd:javascript>
						alCambiar(event);
					</fd:javascript>
				</fd:on-value-changed>										
				</fd:field>

	        	<fd:booleanfield id="marcar">
					<fd:label>Seleccionar</fd:label>
					<fd:hint>Selecciona el registro.</fd:hint>
					<fd:help>
						Los registros seleccionados ser치n eliminados del
						formulario cuando se haga click en el bot칩n
						<b>Eliminar</b>
					</fd:help>
				</fd:booleanfield>
				</fd:widgets>
			</fd:repeater>

			<fd:repeater-action id="agregar" command="add-row"
				repeater="detalle">
				<fd:label>Agregar</fd:label>
				<fd:hint>
					Haga click en el bot칩n para agregar un registro.
				</fd:hint>
			</fd:repeater-action>

			<fd:repeater-action id="eliminar" command="delete-rows"
				repeater="detalle" select="marcar">
				<fd:label>Eliminar</fd:label>
				<fd:hint>
					Haga click en el bot칩n para eliminar los registros
					seleccionados.
				</fd:hint>
			</fd:repeater-action>

        <fd:submit id="crear">
			<fd:label>Crear</fd:label>
			<fd:help>Crear</fd:help>
			<fd:hint>Crear</fd:hint>
		</fd:submit>
		
		<fd:submit id="aceptar" state="invisible">
			<fd:label>Aceptar</fd:label>
			
		</fd:submit>
		
		<fd:submit id="cancelar" state="invisible">
			<fd:label>Cancelar</fd:label>
		</fd:submit>

   </fd:widgets>
</fd:form>