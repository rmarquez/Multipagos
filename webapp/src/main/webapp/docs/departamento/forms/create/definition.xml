<?xml version="1.0" encoding="UTF-8"?>
<fd:form xmlns:fd="http://apache.org/cocoon/forms/1.0#definition">
	<fd:validation>
        <fd:javascript>        	
            return validarForm(widget);         
        </fd:javascript>
    </fd:validation>
    <fd:widgets>
    	<fd:messages id="mensajes de error">
            <fd:label>Ocurrieron los siguientes errores</fd:label>
        </fd:messages>
        <fd:field id="departamentoId">
			<fd:datatype base="integer"/>
		</fd:field>
        <fd:field id="departamentoNombre" required="true">
            <fd:label>Departamento: </fd:label>
            <fd:help>Escriba el nombre del departamento.</fd:help>
            <fd:hint>Nombre del departamento</fd:hint>
            <fd:datatype base="string"/>
            <fd:validation>
                <fd:length max="50"/>
            </fd:validation>
        </fd:field>
        <fd:booleanfield id="inactivo"></fd:booleanfield>
        <fd:submit id="crear">
            <fd:label>Crear</fd:label>
        </fd:submit>
    </fd:widgets>
</fd:form>