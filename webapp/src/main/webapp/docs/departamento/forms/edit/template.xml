<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
          xmlns:fi="http://apache.org/cocoon/forms/1.0#instance" menu="true">
    <header>
        <title>Departamento</title>
    </header>
    <body>
        <s1 title="Editar departamento">
            <ft:form-template action="#{$cocoon/continuation/id}.continue" method="POST">
            <ft:continuation-id/>
            <ft:widget id="mensajes de error"/>
                <fi:group>
                    <fi:styling type="fieldset" layout="columns"/>
                    <fi:label>Editar datos del departamento</fi:label>
                    <fi:items>
                        <ft:widget id="departamentoNombre"/>
                        <ft:widget id="inactivo"/>
                        <ft:widget id="departamentoId"><fi:styling type="hidden"/></ft:widget>
                    </fi:items>
                </fi:group>
                <ft:widget id="guardar"/>
            </ft:form-template>
        </s1>
    </body>
</document>