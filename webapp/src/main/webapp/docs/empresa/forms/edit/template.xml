<?xml version="1.0" encoding="UTF-8"?>
<document menu="true"
  xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
  xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
  xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">
  <!-- Import the macros that define CForms template elements -->
  <jx:import uri="resource://org/apache/cocoon/forms/generation/jx-macros.xml"/>
	<header>
		<title>Empresa</title>
	</header>
	<body>
		<s1 title="Empresa">
			<ft:form-template
				action="#{$cocoon/continuation/id}.continue" method="POST" ajax="true">
				<ft:widget id="mensajes de error" />
				<fi:group>
					<fi:styling type="tabs" />
					<fi:label>Seleccione una pestaña:</fi:label>
					<fi:state>
						<ft:widget id="tab-state" />
					</fi:state>
					<fi:items>
						<fi:group>
  							<fi:label>Valores varios</fi:label>
  							<fi:styling layout="column" />
  							<fi:items>
  							    <fi:group>
  									<fi:styling layout="columns" />
  									<fi:items>
    									   <ft:widget id="emp_serial" />
    									   
  									</fi:items>
								</fi:group>
							</fi:items>
						</fi:group>
						
					</fi:items>
				</fi:group>
				<br/> <!-- TODO: El espacio debería ser mediante CSS -->
				<ft:widget id="guardar" />
			</ft:form-template>
		</s1>
	</body>
</document>
