<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:jx="http://apache.org/cocoon/templates/jx/1.0" menu="true">
<!-- Importamos las macros definidas por el programador -->
<jx:import uri="context://resources/jxmacros/jxgenerales.xml"/>

    <header>
        <title>Control de pagos</title>
    </header>
    <body>
        <jx:set var="cantidadRegistros" value="${handler.getContador(fecha, usrId)}"/>
        <jx:set var="first" value="${cocoon.session.registrosPorPagina * (pagina - 1)}"/>
        <s1 title="Lista de pagos">
            <hrefPaginacion cadena="pagos.list?fecha=${fecha}&amp;usrId=${usrId}" 
            pagina="${pagina}" 
            registrosPorPagina="${cocoon.session.registrosPorPagina}" 
            cantidadRegistros="${cantidadRegistros}"/>
            <table border="1">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>fecha</th>
                        <th>Supervisor</th>
                        <th>Contrato</th>
                        <th>Factura Interna</th>
                        <th>Suscriptor</th>
                        <th>Colector</th>
                        <th>Monto Pagado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                  <jx:forEach items="${bean}" varStatus="status">
                        <tr>

                           <td><jx:formatNumber value="${status.count + first}"/></td>
                           <td align="right"><formatoFecha fecha="${status.current.pagoIdRef.fecha}" patron="dd/MMM/yyyy"/></td>
                           <td>${status.current.pagoIdRef.usrIdRef.usrFullName}</td>
                           <td>${status.current.numeroContrato}</td>
                           <td>${status.current.facturaInterna}</td>
                           <td>${status.current.carteraIdRef.suscriptor}</td>
                           <td>${status.current.colectorIdRef.primerNombre}  ${status.current.colectorIdRef.primerApellido}</td>
                           <td>${status.current.montoPago}</td>
                             <td>
                               <link href="/multipagos/pagos/edit?pagoId=${status.current.pagoId}">Editar</link>
                               <link href="borrar.list?pagoId=${status.current.pagoId}&amp;fecha=${fecha}&amp;usrId=${usrId}s&amp;pagina=${pagina}&amp;registros=${registros}">Borrar</link>                               
                             </td>
                        </tr>
                  </jx:forEach>
                </tbody>
            </table>
            <hrefPaginacion cadena="pagos.list?fecha=${fecha}&amp;usrId=${usrId}" 
            pagina="${pagina}" 
            registrosPorPagina="${cocoon.session.registrosPorPagina}" 
            cantidadRegistros="${cantidadRegistros}"/>
         </s1>
         <link href="/multipagos/pagos/search">Volver</link>
    </body>
</document>