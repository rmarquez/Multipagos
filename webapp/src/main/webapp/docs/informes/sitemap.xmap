<?xml version="1.0" encoding="UTF-8"?>
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

    <!-- Utilizada en flow -->
    <map:flow language="javascript">
        <map:script src="resource://org/apache/cocoon/forms/flow/javascript/Form.js"/>
        <map:script src="context://resources/flow/auth.js"/>
        <map:script src="context://resources/flow/autentificar.js"/>
        <map:script src="context://docs/util/dialogos/sino/flow.js"/>
        <map:script src="context://docs/util/dialogos/aceptar/flow.js"/>
        <map:script src="context://docs/suggestions/flow.js"/>
        <map:script src="forms/combo/flow.js"/>
        <map:script src="forms/visitasxcolector/flow.js"/>
        <map:script src="forms/pagosxdepartamento/flow.js"/>
        <map:script src="forms/promesasdepago/flow.js"/>
        <map:script src="forms/visitaspendientes/flow.js"/>
        <map:script src="forms/pagosenclaro/flow.js"/>
        <map:script src="forms/carteraxservicio/flow.js"/>
        <map:script src="forms/visitasdiarias/flow.js"/>
        <map:script src="forms/consolidadovisitas/flow.js"/>
        <map:script src="forms/detallevisitas/flow.js"/>
        <map:script src="forms/nopago/flow.js"/>
        <map:script src="forms/detallenopago/flow.js"/>
        <map:script src="forms/visitasavon/flow.js"/>
        <map:script src="forms/pagosavon/flow.js"/>
        <map:script src="forms/promesasavon/flow.js"/>
        <map:script src="forms/promesasbanpro/flow.js"/>
        <map:script src="forms/estadogestion/flow.js"/>
    </map:flow>

    <map:pipelines>
        <map:pipeline internal-only="true">
            <map:match pattern="**.jx">
                <map:generate type="jx" src="{1}.xml"/>
                <map:transform type="i18n"/>
                <map:transform src="context://stylesheets/multipagos.xslt"/>
                <map:transform type="xinclude"/>
                <map:transform type="xalan" src="context://stylesheets/forms/forms-samples-styling.xsl"/>
                <map:serialize/>
            </map:match>
            <map:match pattern="*.list">
                <map:call function="{1}List"/>
            </map:match>
            
            <map:match pattern="*-form-display">
		        <map:generate type="jx" src="forms/{1}/template.xml">
		          <map:parameter name="locale" value="{request:locale}"/>
		        </map:generate>
		        <map:transform type="browser-update"/>
		        <map:transform type="i18n"/>
		        <map:transform src="context://stylesheets/multipagos.xslt"/>
		        <map:transform type="xinclude"/>
		        <map:transform type="i18n"/>
		        <map:transform type="xalan" src="context://stylesheets/forms/forms-samples-styling.xsl"/>
		        <map:transform type="encodeURL"/>
		        <map:select type="ajax-request">
		         <map:when test="true">
		           <map:serialize type="xml"/>
		         </map:when>
		         <map:otherwise>
		           <map:serialize type="html"/>
		         </map:otherwise>
	             </map:select>
	        </map:match>
            
            <map:match pattern="*.sendmail">
                <map:generate type="jx" src="forms/{1}/sendMail.xml"/>
                <map:transform type="xinclude"/>
                <map:transform type="sendmail"/>
                <map:serialize/>
            </map:match>
            
            <map:match pattern="*.combo">
                <map:call function="{1}Combo"/>
            </map:match>
            <map:match pattern="*Combo-data">
                <map:generate type="jx" src="forms/combo/{1}.xml"/>
                <map:serialize type="xml"/>
            </map:match>
            
            <!-- Documentos en formato PDF -->
            
           <map:match pattern="**.pdf">
                <map:generate type="jx" src="{1}.xml"/>
	        <map:transform src="context://stylesheets/multipagos-aviso2fo.xsl">
	          <map:parameter name="baseUrl" value="http://localhost:{request:serverPort}{request:contextPath}"/>
	        </map:transform>
	        <map:transform type="xinclude"/>
	        <map:serialize type="fo2pdf"/>
	      </map:match>
           <!--  
             <map:match pattern="**.pdf">
                <map:generate type="jx" src="{1}.xml"/>
                <map:transform src="context://stylesheets/multipagos-aviso2fo.xsl"/>
                <map:serialize type="fo2pdf"/>
            </map:match>
            Documentos en formato EXCEL -->
            <map:match pattern="**.xls">
                <map:generate type="jx" src="{1}.xls.xml"/>
                <map:transform src="context://stylesheets/multipagos-pagina2xls.xsl"/>
                <map:serialize type="xls"/>
            </map:match>
            <map:match pattern="*.continue">
                <map:call continuation="{1}"/>
            </map:match>
            <map:match pattern="*">
                <map:call function="handleForm">
                    <map:parameter name="function" value="{1}form"/>
                    <map:parameter name="definitionURI" value="forms/{1}/definition.xml"/>
                    <map:parameter name="attribute-name" value="{1}form"/>
                </map:call>
            </map:match>
        </map:pipeline>

        <map:pipeline>
         <!--
             | Show a suggestion list
              -->
             <map:match pattern="_cocoon/forms/suggest">
              <map:generate type="suggestion-list"/>
              <map:transform type="i18n"/>
              <map:transform src="resource://org/apache/cocoon/forms/resources/selection-list2json.xsl"/>
              <map:serialize type="json"/>
            </map:match>
            
            <map:match pattern="*">
                <map:call function="protect">
                    <map:parameter name="handler" value="authhandler"/>
                    <map:parameter name="protected-internal" value="{1}"/>
                    <map:parameter name="failure-redirect" value="/entrada?resource={1}"/>
                </map:call>
            </map:match>
        </map:pipeline>
    </map:pipelines>
</map:sitemap>