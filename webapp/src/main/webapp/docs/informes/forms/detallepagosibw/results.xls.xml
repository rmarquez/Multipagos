<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">
    <jx:import uri="context://resources/jxmacros/jxgenerales.xml"/>

    <title>Detalle Pagos Ibw</title>

    <columnas No="0" Unit="80"/>
    <columnas No="1" Unit="300"/>
    <columnas No="2" Unit="100"/>
    <columnas No="3" Unit="100"/>
    <columnas No="4" Unit="100"/>
    <columnas No="5" Unit="100"/>
    <columnas No="6" Unit="300"/>

    <jx:set var="fila" value="${1}"/>
    <jx:set var="col" value="${0}"/>
    <jx:set var="colFin" value="${6}"/>
    
     
    <celda Col="${col}" Row="${fila}">DETALLE PAGOS IBW</celda>
    <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Unit="18"/>
	<jx:set var="fila" value="${fila+2}"/>
	
	<celda Col="${col}" Row="${fila}">Fecha de Inicio:</celda> 
    <celda Col="${col+1}" Row="${fila}"><formatoFecha fecha="${fechaIni}" patron="dd/MMM/yyyy"/></celda>
    <estilo startCol="${col}" startRow="${fila}" endCol="${col+3}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Recuadro="1"/>
    
    <celda Col="${col+4}" Row="${fila}">Fecha Final:</celda> 
     <celda Col="${col+5}" Row="${fila}"><formatoFecha fecha="${fechaFin}" patron="dd/MMM/yyyy"/></celda>
    <estilo startCol="${col+4}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="6" VAlign="4" Bold="1" Recuadro="1"/>
    <jx:set var="fila" value="${fila+2}"/>
    
	
	  <celda Col="${col}" Row="${fila}">CODIGO</celda>
      <celda Col="${col+1}" Row="${fila}">CLIENTE</celda>
      <celda Col="${col+2}" Row="${fila}">MUNICIPIO</celda>
      <celda Col="${col+3}" Row="${fila}">FACTURA</celda>
      <celda Col="${col+4}" Row="${fila}">MONTO</celda>
      <celda Col="${col+5}" Row="${fila}">FECHA PAGO</celda>
      <celda Col="${col+6}" Row="${fila}">OBSERVACIONES</celda>
      <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Unit="10" Recuadro="1"/>
      <jx:set var="fila" value="${fila+1}"/>
      <jx:set var="filaIni" value="${fila}"/> 
   
    
    
    <jx:set var="filaInicial" value="${fila}"/>

    <jx:forEach var="item" items="${bean}" varStatus="status">
    	
	    <celda Col="${col}" Row="${fila}">${item[0]}</celda>
	    <celda Col="${col+1}" Row="${fila}">${item[1]} ${item[2]}</celda>
	    <celda Col="${col+2}" Row="${fila}">${item[3]}</celda>
	    <celda Col="${col+3}" Row="${fila}">${item[4]}</celda>
	    <celda Col="${col+4}" Row="${fila}">${item[5]}</celda>
	    <celda Col="${col+5}" Row="${fila}">${item[6]}</celda>
	    <celda Col="${col+6}" Row="${fila}">${item[7]}</celda>
	    <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Recuadro="1"/>    
	    <jx:set var="fila" value="${fila+1}"/>
	
	    <jx:if test="${status.last}">      
	        <jx:set var="fila" value="${fila+1}"/>        
	    </jx:if>
    </jx:forEach>
</document>