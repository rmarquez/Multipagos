<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:jx="http://apache.org/cocoon/templates/jx/1.0" menu="true">

    <jx:import uri="context://resources/jxmacros/jxgenerales.xml"/>

    <header>
        <title>Consolidados de Visitas Avon</title>
    </header>
    <body>
        <s1 title="Consolidados de Visitas Avon">
            <table border="1">
                <thead>
                    <tr>
                        <th align="left" colspan="4">Fecha de Inicio: <formatoFecha fecha="${fechaIni}" patron="dd/MMM/yyyy"/></th>
                        <th align="left" colspan="3">Fecha Final: <formatoFecha fecha="${fechaFin}" patron="dd/MMM/yyyy"/></th>
                        <tr><td colspan="7"/></tr>
                    </tr>
                    <tr>
                        <th>FECHA</th>
                        <th>ZONA</th>
                        <th>CANTIDAD VISITAS</th>
                        <th>LOCALIZADAS</th>
						<th>NO LOCALIZADAS</th>
                        <th>MONTO RECUPERADO</th>
                        <th>CANTIDAD PAGOS</th>
                    </tr>
                </thead>
                <tbody>
                	                 
 
                    <jx:forEach var="item" items="${bean}" varStatus="status">
                        <tr>
                        	<td align="right">${item[1]}</td>
                            <td align="right">${item[0]}</td>
                            <td align="right">${item[2]-item[5]}</td>
	                        <td align="right">${item[3]}</td>
                            <td align="right">${(item[2]-item[5])-item[3]}</td>
                            <td align="right">${item[4]}</td>
                            <td align="right">${item[5]}</td>
                        </tr>                        
                        <jx:if test="${status.last}">
                            <tr><td colspan="7"></td></tr>
                        </jx:if>
                    </jx:forEach>
                </tbody>
            </table>
        </s1>
    </body>
</document>