<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:jx="http://apache.org/cocoon/templates/jx/1.0" menu="true">

    <jx:import uri="context://resources/jxmacros/jxgenerales.xml"/>

    <header>
        <title>Reporte de Gestiones IBW</title>
    </header>
    <body>
        <s1 title="Reporte de Visitas IBW">
            <table border="1">
                <thead>
                    <tr>
                        <th align="left" colspan="7">Fecha de Inicio: <formatoFecha fecha="${fechaIni}" patron="dd/MMM/yyyy"/></th>
                        <th align="left" colspan="8">Fecha Final: <formatoFecha fecha="${fechaFin}" patron="dd/MMM/yyyy"/></th>
                        <tr><td colspan="15"/></tr>
                    </tr>
                    <tr>
                        <th>COD CLIENTE</th>
                        <th>NOMBRE CLIENTE</th>
                        <th>CANTIDAD FACTURA</th>
                        <th>VALOR FACTURA</th>
						<th>ACCION</th>
                        <th>RESULTADO</th>
                        <th>GESTION VISITA</th>
                        <th>DEPARTAMENTO</th>
                        <th>MUNICIPIO</th>
                        <th>AVISO COBRO</th>
                        <th>SUPERVISOR</th>
                        <th>COLECTOR</th>
                        <th>TECNOLOGIA</th>
                        <th>HORA REGISTRO</th>
                        <th>OBSERVACIONES</th>
                    </tr>
                </thead>
                <tbody>
                	<jx:set var="colector" value=""/>                  
 
                    <jx:forEach var="item" items="${bean}" varStatus="status">
                    	<jx:if test="colectorId != item[11]}">
                         <jx:if test="${!status.first}">
                            <tr>
	                           	<th colspan="7">Total Visitas</th> 
	                           	<th colspan="8"><jx:formatNumber value="${status.count}"/></th>                             
                       		</tr>
                            </jx:if>
                            <jx:if test="${!status.last}">
                                <tr><td colspan="15"></td></tr>
                            </jx:if>
                            <tr>
                                <th colspan="15">colector: ${item[12]}</th>                                
                            </tr>
                            
                       </jx:if>
                        <jx:set var="colectorId" value="${item[11]}"/>
	                    <tr>
                        	<td align="right">${item[0]}</td>
                            <td align="right">${item[1]}</td>
                            <td align="right">${item[2]}</td>
	                        <td align="right"><formatoNumero numero="${item[3]}"/></td>
	                        <!-- <td align="right">Visita de Cobro</td> -->
	                        <td align="right">${item[4]}</td>
                            <td align="right">${item[5]}</td>
                            <td align="right"><formatoFecha fecha="${item[6]}" patron="dd/MMM/yyyy"/></td>
                            <td align="right">${item[7]}</td>
                            <td align="right">${item[8]}</td>
                            <td align="right">${item[9]}</td>
                            <td align="right">${item[10]}</td>
                            <td align="right">${item[12]}</td>
                            <td align="right">${item[13]}</td>
                            <td align="right">${item[14]}</td>
                            <td align="right">${item[15]}</td>
                           <!--  <td align="right">${item[16]}</td> -->
                        </tr>                        
                        <jx:if test="${status.last}">
                            <tr>
                             	<th colspan="7">Total Visitas</th> 
	                           	<th colspan="8"><jx:formatNumber value="${status.count}"/></th>                            
                         	</tr>
                        </jx:if>
                    </jx:forEach>
                </tbody>
            </table>
        </s1>
    </body>
</document>