<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:jx="http://apache.org/cocoon/templates/jx/1.0" menu="true">

    <jx:import uri="context://resources/jxmacros/jxgenerales.xml"/>

    <header>
        <title>Pagos Ibw</title>
    </header>
    <body>
        <s1 title="Pagos Ibw">
            <table border="1">
                <thead>
                    <tr>
                        <th align="left" colspan="3">Fecha de Inicio: <formatoFecha fecha="${fechaIni}" patron="dd/MMM/yyyy"/></th>
                        <th align="left" colspan="4">Fecha Final: <formatoFecha fecha="${fechaFin}" patron="dd/MMM/yyyy"/></th>
                        <tr><td colspan="7"/></tr>
                    </tr>
                    <tr>
                        <th>Fecha</th>
                        <th>RegNumber</th>
                        <th>NoRecibo</th>
                        <th>MontoCordoba</th>
                        <th>MontoDolar</th>
                        <th>CK</th>
                        <th>NoCk</th>
                    </tr>
                </thead>
                <tbody>
                	                 
 					  
                    <jx:forEach var="item" items="${bean}" varStatus="status">
                    
                    <jx:set var="tasa" value="${tasah.getTasaFija(item[0])}"/>
                    <jx:set var="cordobas" value="${util.calcularTasaCs(tasa, (item[3]))}"/>
                    
                        <tr>
                        	<td><formatoFecha fecha="${item[0]}" patron="dd/MMM/yyyy"/></td>
                            <td align="right">${item[1]}</td>
                            <td align="right">${item[2]}</td>
	                        <td align="right">${cordobas}</td>
	                        <td align="right">${item[3]}</td>
	                        <jx:if test="${item[4]== true}">
						    	<td align="right">1</td>
						    </jx:if>
						    <jx:if test="${item[4]== false}">
						    	<td align="right">0</td>
						    </jx:if>
						    <jx:if test="${item[5]==null}">
						    	<td align="right"><blanco/></td>
						    </jx:if>
						    <jx:if test="${item[5]!=null}">
						    	<td align="right">${item[5]}</td>
						    </jx:if>
	                    </tr>                        
                        <jx:if test="${status.last}">
                            <tr><td colspan="7"></td></tr>
                        </jx:if>
                    </jx:forEach>
                </tbody>
            </table>
        </s1>
    </body>
</document>