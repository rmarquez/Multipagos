<?xml version="1.0" encoding="UTF-8"?>
<fd:form xmlns:fd="http://apache.org/cocoon/forms/1.0#definition">
    <fd:widgets>
    	
    
        <fd:field id="fechaIni">
            <fd:label>Fecha inicial (dd/mm/yyyy):</fd:label>
            <fd:help>Escriba la fecha en la cual desea listar las visitas</fd:help>
            <fd:datatype base="date">
                <fd:convertor>
                    <fd:patterns>
                        <fd:pattern>dd/MM/yyyy</fd:pattern>
                    </fd:patterns>
                </fd:convertor>
            </fd:datatype>
        </fd:field>

        <fd:field id="fechaFin">
            <fd:label>Fecha final (dd/mm/yyyy):</fd:label>
            <fd:help>Escriba la fecha en la cual desea listar las visitas</fd:help>
            <fd:datatype base="date">
                <fd:convertor>
                    <fd:patterns>
                        <fd:pattern>dd/MM/yyyy</fd:pattern>
                    </fd:patterns>
                </fd:convertor>
            </fd:datatype>
        </fd:field>
        
        <fd:field id="numAsignacion" required="true">
        	<fd:label>Asignacion Numero:</fd:label>
			<fd:datatype base="integer"/>
			<fd:selection-list src="cocoon:/numAsignacion.combo" cache="none" />
			<fd:on-value-changed>
				<fd:javascript>
					alSeleccionarNum(event);
				</fd:javascript>
			</fd:on-value-changed>
		</fd:field>
        
        <fd:field id="departamentoId">
        	<fd:label>Departamento:</fd:label>
			<fd:datatype base="integer"/>
			<fd:selection-list src="cocoon:/departamentosAsignacion.combo" cache="none" />
			<fd:on-value-changed>
				<fd:javascript>
					alSeleccionarDepartamento(event);
				</fd:javascript>
			</fd:on-value-changed>
		</fd:field>
		
		<fd:field id="localidadId">
			<fd:label>Localidad</fd:label>
			<fd:datatype base="integer" />					
			<fd:selection-list src="cocoon:/localidad.combo" dynamic="true"/>
			<fd:on-value-changed>
				<fd:javascript>
					alSeleccionarLocalidad(event);
				</fd:javascript>
			</fd:on-value-changed>
		</fd:field>
		
		<fd:field id="barrioId">
        	<fd:label>Barrio</fd:label>
			<fd:datatype base="integer"/>
			<fd:selection-list src="cocoon:/barrio.combo" cache="request" />
		</fd:field>
		
		<!-- <fd:field id="aAsignacion">
        	<fd:label>Ano Asignacion:</fd:label>
			<fd:datatype base="decimal"/>
			<fd:selection-list src="cocoon:/aAsignacion.combo" cache="none" />
		</fd:field> 
		
		<fd:field id="servicioId" required="true">
			<fd:label>Servicio</fd:label>
			<fd:datatype base="integer" />
			<fd:selection-list src="cocoon:/servicio.combo"	cache="none"/>
			<fd:on-value-changed>
				<fd:javascript>
					alSeleccionarServicio(event);
				</fd:javascript>
			</fd:on-value-changed>					
		</fd:field>	-->
		
		<fd:field id="asignacionAnio">
			<fd:label>Fecha Asignacion</fd:label>
			<fd:datatype base="date">
				<fd:convertor>
                    <fd:patterns>
                        <fd:pattern>dd/MM/yyyy</fd:pattern>
                    </fd:patterns>
                </fd:convertor>
            </fd:datatype>
			<fd:selection-list src="cocoon:/asignacionAnio.combo" cache="none"/>
			<fd:on-value-changed>
				<fd:javascript>
					alSeleccionarFecha(event);
				</fd:javascript>
			</fd:on-value-changed>								
		</fd:field>
		
		
       
        <fd:submit id="listar">
            <fd:label>Listar</fd:label>
            <fd:help>Listar</fd:help>
            <fd:hint>Listar</fd:hint>
        </fd:submit>
        <fd:submit id="excel">
            <fd:label>Excel</fd:label>
            <fd:help>Excel</fd:help>
            <fd:hint>Excel</fd:hint>
        </fd:submit>
        <fd:submit id="aviso">
            <fd:label>Aviso Cobro</fd:label>
            <fd:help>Boton para generar los avisos de cobro en formato pdf</fd:help>
        </fd:submit>
    </fd:widgets>
</fd:form>