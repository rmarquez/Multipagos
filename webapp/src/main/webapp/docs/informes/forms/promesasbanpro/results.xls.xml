<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">
    <jx:import uri="context://resources/jxmacros/jxgenerales.xml"/>

    <title>Promesas pago</title>

    <columnas No="0" Unit="100"/>
    <columnas No="1" Unit="250"/>
    <columnas No="2" Unit="200"/>
    <columnas No="3" Unit="100"/>
    <columnas No="4" Unit="100"/>
    <columnas No="5" Unit="100"/>
    <columnas No="6" Unit="100"/>
    <columnas No="7" Unit="150"/>
    <columnas No="8" Unit="100"/>
    <columnas No="9" Unit="100"/>
    <columnas No="10" Unit="100"/>
    <columnas No="11" Unit="100"/>

    <jx:set var="fila" value="${1}"/>
    <jx:set var="col" value="${0}"/>
    <jx:set var="colFin" value="${11}"/>
    
    <celda Col="${col}" Row="${fila}">PROMESAS DE PAGO BANPRO</celda>
    <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Unit="18"/>
	<jx:set var="fila" value="${fila+2}"/>

    <celda Col="${col}" Row="${fila}">Fecha de Inicio:</celda> 
    <celda Col="${col+2}" Row="${fila}"><formatoFecha fecha="${fechaIni}" patron="dd/MMM/yyyy"/></celda>
    <estilo startCol="${col}" startRow="${fila}" endCol="${col+5}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Recuadro="1"/>
    
    <celda Col="${col+6}" Row="${fila}">Fecha Final:</celda> 
     <celda Col="${col+8}" Row="${fila}"><formatoFecha fecha="${fechaFin}" patron="dd/MMM/yyyy"/></celda>
    <estilo startCol="${col+6}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Recuadro="1"/>
    <jx:set var="fila" value="${fila+2}"/>

    <jx:set var="fila" value="${fila+2}"/>

    <jx:set var="colector" value=""/>

    <jx:set var="filaInicial" value="${fila}"/>

    <celda Col="${col}" Row="${fila}">FECHA ARREGLO</celda>
    <celda Col="${col+1}" Row="${fila}">NOMBRE</celda>
    <celda Col="${col+2}" Row="${fila}">PRODUCTO</celda>
    <celda Col="${col+3}" Row="${fila}">TARJETA</celda>
    <celda Col="${col+4}" Row="${fila}">CUENTA</celda>
    <celda Col="${col+5}" Row="${fila}">DEUDA CORDOBAS</celda>
    <celda Col="${col+6}" Row="${fila}">DEUDA DOLARES</celda>
    <celda Col="${col+7}" Row="${fila}">TOTAL DEUDA DOLARES</celda>
    <celda Col="${col+8}" Row="${fila}">DESCUENTO</celda>
    <celda Col="${col+9}" Row="${fila}">PLAZO (MESES)</celda>
    <celda Col="${col+10}" Row="${fila}">CUOTA</celda>
    <celda Col="${col+11}" Row="${fila}">FECHA CUOTA</celda>
    <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Recuadro="1"/>
    <jx:set var="fila" value="${fila+1}"/>
    <jx:set var="filaInicial" value="${fila}"/>
    
    <jx:forEach var="item" items="${bean}" varStatus="status">
    <celda Col="${col}" Row="${fila}"><formatoFecha fecha="${item[0]}" patron="dd/MMM/yyyy"/></celda>
    <celda Col="${col+1}" Row="${fila}">${item[1]}</celda>
    <celda Col="${col+2}" Row="${fila}">${item[2]}</celda>
    <celda Col="${col+3}" Row="${fila}">${item[3]}</celda>
    <celda Col="${col+4}" Row="${fila}">${item[4]}</celda>
    <celda Col="${col+5}" Row="${fila}" ValueType="flotante">${item[5]}</celda>
    <celda Col="${col+6}" Row="${fila}" ValueType="flotante">${item[5]}</celda>
    <celda Col="${col+7}" Row="${fila}" ValueType="flotante">${item[7]}</celda>
    <celda Col="${col+8}" Row="${fila}">${item[8]}</celda>
    <celda Col="${col+9}" Row="${fila}">${item[9]}</celda>
    <celda Col="${col+10}" Row="${fila}">${item[10]}</celda>
    <celda Col="${col+11}" Row="${fila}"><formatoFecha fecha="${item[11]}" patron="dd/MMM/yyyy"/></celda>    
	<estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Recuadro="1"/>
    <jx:set var="fila" value="${fila+1}"/>
    
    <jx:if test="${status.last}">        
        <jx:set var="fila" value="${fila+2}"/>        
    </jx:if>
    </jx:forEach>
</document>