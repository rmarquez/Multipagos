<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">
    <jx:import uri="context://resources/jxmacros/jxgenerales.xml"/>

    <title>Reporte de Estado de Gestion</title>

    <columnas No="0" Unit="180"/>
    <columnas No="1" Unit="200"/>
    <columnas No="2" Unit="100"/>
    <columnas No="3" Unit="100"/>
    <columnas No="4" Unit="100"/>
    <columnas No="5" Unit="100"/>
    <columnas No="6" Unit="100"/>
    <columnas No="7" Unit="100"/>
    <columnas No="8" Unit="100"/>
    <columnas No="9" Unit="100"/>
    <columnas No="10" Unit="100"/>

    <jx:set var="fila" value="${1}"/>
    <jx:set var="col" value="${0}"/>
    <jx:set var="colFin" value="${10}"/>
    
     
    <celda Col="${col}" Row="${fila}">REPORTE DE ESTADO DE GESTION</celda>
    <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Unit="18"/>
	<jx:set var="fila" value="${fila+2}"/>
	
	<celda Col="${col}" Row="${fila}">Fecha de Inicio:</celda> 
    <celda Col="${col+3}" Row="${fila}"><formatoFecha fecha="${fechaIni}" patron="dd/MMM/yyyy"/></celda>
    <estilo startCol="${col}" startRow="${fila}" endCol="${col+5}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Recuadro="1"/>
    
    <celda Col="${col+6}" Row="${fila}">Fecha Final:</celda> 
     <celda Col="${col+8}" Row="${fila}"><formatoFecha fecha="${fechaFin}" patron="dd/MMM/yyyy"/></celda>
    <estilo startCol="${col+6}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="6" VAlign="4" Bold="1" Recuadro="1"/>
    <jx:set var="fila" value="${fila+2}"/>
    
	<jx:if test="${simboloId == null}"> 
	  <celda Col="${col}" Row="${fila}">NOMBRE</celda>
      <celda Col="${col+1}" Row="${fila}">PRODUCTO</celda>
      <celda Col="${col+2}" Row="${fila}">CUENTA</celda>
      <celda Col="${col+3}" Row="${fila}">TARJETA</celda>
	  <celda Col="${col+4}" Row="${fila}">CIUDAD CASA</celda>
      <celda Col="${col+5}" Row="${fila}">CIUDAD TRABAJO</celda>
      <celda Col="${col+6}" Row="${fila}">SIMBOLO</celda>
      <celda Col="${col+7}" Row="${fila}">SIMBOLO NOMBRE</celda>
      <celda Col="${col+8}" Row="${fila}">OBSERVACIONES</celda>
      <celda Col="${col+9}" Row="${fila}">FECHA GESTION</celda>
      <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Unit="10" Recuadro="1"/>
      <jx:set var="fila" value="${fila+1}"/>
      <jx:set var="filaIni" value="${fila}"/> 
    </jx:if>
    
    
    <jx:set var="filaInicial" value="${fila}"/>

    <jx:forEach var="item" items="${bean}" varStatus="status">
   	<jx:if test="${simboloId != item[10]}">    	
       <jx:if test="${simboloId != null}">     
       <celda Col="${col}" Row="${fila}">SIMBOLO: ${item[6]}</celda>
       <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Unit="16" Recuadro="1"/>  
	        
       <celda Col="${col}" Row="${fila}">NOMBRE</celda>
      <celda Col="${col+1}" Row="${fila}">PRODUCTO</celda>
      <celda Col="${col+2}" Row="${fila}">CUENTA</celda>
      <celda Col="${col+3}" Row="${fila}">TARJETA</celda>
	  <celda Col="${col+4}" Row="${fila}">CIUDAD CASA</celda>
      <celda Col="${col+5}" Row="${fila}">CIUDAD TRABAJO</celda>
      <celda Col="${col+6}" Row="${fila}">SIMBOLO</celda>
      <celda Col="${col+7}" Row="${fila}">SIMBOLO NOMBRE</celda>
      <celda Col="${col+8}" Row="${fila}">OBSERVACIONES</celda>
      <celda Col="${col+9}" Row="${fila}">FECHA GESTION</celda>
      <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Unit="10" Recuadro="1"/>
      <jx:set var="fila" value="${fila+1}"/>
      <jx:set var="filaIni" value="${fila}"/> 
      
     </jx:if>
 </jx:if>
    
	    <celda Col="${col}" Row="${fila}">${item[0]}</celda>
	    <celda Col="${col+1}" Row="${fila}">${item[1]}</celda>
	    <celda Col="${col+2}" Row="${fila}">${item[2]}</celda>
	    <celda Col="${col+3}" Row="${fila}">${item[3]}</celda>
	    <celda Col="${col+4}" Row="${fila}">${item[4]}</celda>
	    <celda Col="${col+5}" Row="${fila}">${item[5]}</celda>
	    <celda Col="${col+6}" Row="${fila}">${item[6]}</celda>
	    <celda Col="${col+7}" Row="${fila}">${item[7]}</celda>
	    <jx:if test="${item[8] != null}">
	    	<celda Col="${col+8}" Row="${fila}">${item[8]}</celda>
	    </jx:if>
	    <jx:if test="${item[8]== null}">
	    	<celda Col="${col+8}" Row="${fila}"><blanco/></celda>
	    </jx:if>
	    <celda Col="${col+8}" Row="${fila}">${item[8]}</celda>
	    <celda Col="${col+10}" Row="${fila}"><formatoFecha fecha="${item[9]}" patron="dd/MMM/yyyy"/></celda>
	    <estilo startCol="${col}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" HAlign="64" VAlign="4" Recuadro="1"/>    
	    <jx:set var="fila" value="${fila+1}"/>
	
	    <jx:if test="${status.last}">      
	        <celda Col="${col}" Row="${fila}">Total Gestiones</celda>
	        <estilo startCol="${col}" startRow="${fila}" endCol="${col+3}" endRow="${fila}" HAlign="64" VAlign="4" Bold="1" Recuadro="1"/>
	        <celda Col="${col+4}" Row="${fila}" ValueType="flotante" patron="#,##0"><jx:formatNumber value="${status.count}"/></celda>
	        <estilo  startCol="${col+4}" startRow="${fila}" endCol="${colFin}" endRow="${fila}" Recuadro="1" Bold="1" Unit="18" Format="#,##0"/>
	         <jx:set var="fila" value="${fila+1}"/>        
	    </jx:if>
    </jx:forEach>
</document>