<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:jx="http://apache.org/cocoon/templates/jx/1.0" menu="true">

    <jx:import uri="context://resources/jxmacros/jxgenerales.xml"/>

    <header>
        <title>Detalle Razones No Pago</title>
    </header>
    <body>
        <s1 title="Detalle de Visitas Avon">
            <table border="1">
                <thead>
                    <!-- <tr>
                        <th align="left" colspan="3">Fecha de Inicio: <formatoFecha fecha="${fechaIni}" patron="dd/MMM/yyyy"/></th>
                        <th align="left" colspan="3">Fecha Final: <formatoFecha fecha="${fechaFin}" patron="dd/MMM/yyyy"/></th>
                        <tr><td colspan="6"/></tr>
                    </tr> -->
                    <tr>
                        <th>CODIGO</th>
                        <th>CONSEJERO</th>
                        <th>SALDO EN CTA</th>
                        <th>OBSERVACIONES</th>
                    </tr>
                </thead>
                <tbody>
                	                 
 
                    <jx:forEach var="item" items="${bean}" varStatus="status">
                        <tr>
                        	<td align="right">${item[0]}</td>
                            <td align="right">${item[1]}</td>
                            <td align="right">${item[2]}</td>
	                        <td align="right">${item[3]}</td>
                        </tr>                        
                        <jx:if test="${status.last}">
                            <tr><td colspan="4"></td></tr>
                        </jx:if>
                    </jx:forEach>
                </tbody>
            </table>
        </s1>
    </body>
</document>